# =========================
# NEW GEN PATIO – .htaccess
# =========================

# Seguridad básica
<IfModule mod_headers.c>
  Header always set X-Content-Type-Options "nosniff"
  Header always set X-Frame-Options "SAMEORIGIN"
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  Header always set Permissions-Policy "camera=(), microphone=(), geolocation=()"
  # Activa HSTS sólo si TODO es https (incl. subdominios)
  Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
</IfModule>

# Canonical: https + www en un solo salto
<IfModule mod_rewrite.c>
  RewriteEngine On
  # 301 único hacia https://www.newgenpatio.com
  RewriteCond %{HTTPS} !=on [OR]
  RewriteCond %{HTTP_HOST} !^www\.newgenpatio\.com$ [NC]
  RewriteRule ^ https://www.newgenpatio.com%{REQUEST_URI} [R=301,L]
</IfModule>

# Tipos/MIME
AddType image/avif                 avif
AddType image/webp                 webp
AddType font/woff2                 woff2
AddType application/javascript     mjs
AddType image/svg+xml              svg
AddType text/css                   css

# Compresión
<IfModule mod_brotli.c>
  BrotliCompressionQuality 5
  AddOutputFilterByType BROTLI_COMPRESS text/css text/html text/plain text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/css text/html text/plain text/javascript application/javascript application/json application/xml image/svg+xml
</IfModule>

# Cache-Control
<IfModule mod_headers.c>
  # HTML: siempre revalidar
  <FilesMatch "\.(html?)$">
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set Pragma "no-cache"
    Header set Expires "0"
  </FilesMatch>

  # Estáticos con HASH (8+ hex): 1 año + immutable
  <FilesMatch "\.[0-9a-f]{8,}\.(css|js|mjs|woff2|png|jpe?g|gif|webp|avif|svg|ico|mp4|webm)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

  # Estáticos sin hash: 30 días
  <FilesMatch "\.(css|js|mjs|woff2|png|jpe?g|gif|webp|avif|svg|ico|mp4|webm)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>

  Header unset ETag
  Header append Vary "Accept-Encoding"
</IfModule>
FileETag None

# Evita conflictos de content-negotiation
Options -MultiViews
DirectoryIndex index.html

# SPA fallback (soporta GET y HEAD). No intercepta archivos reales ni assets.
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  RewriteCond %{REQUEST_METHOD} ^(GET|HEAD)$
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_URI} !\.(?:css|js|mjs|map|json|png|jpe?g|gif|webp|avif|svg|ico|woff2?|ttf|eot|mp4|webm)$ [NC]
  RewriteRule ^ index.html [L]
</IfModule>
